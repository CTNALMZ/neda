<!-- MessageDialogWindow.xaml -->
<Window x:Class="YourNamespace.Utilities.Dialogs.MessageDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YourNamespace.Utilities.Dialogs"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="250" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height">

    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>

        <Style x:Key="IconStyle" TargetType="Image">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Icon and Message -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Image x:Name="Icon"
                   Style="{StaticResource IconStyle}"
                   Source="{Binding DialogType, Converter={StaticResource DialogTypeToIconConverter}}"/>

            <TextBlock Text="{Binding Message}" 
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       FontSize="14"/>
        </StackPanel>

        <!-- Buttons Panel -->
        <StackPanel Grid.Row="2" 
                    HorizontalAlignment="Right" 
                    Orientation="Horizontal"
                    Margin="0,20,0,0">

            <Button x:Name="OkButton"
                    Content="OK"
                    Style="{StaticResource DialogButtonStyle}"
                    Command="{Binding OkCommand}"
                    IsDefault="True"
                    Visibility="{Binding Buttons, Converter={StaticResource ButtonVisibilityConverter}, ConverterParameter=OK}"/>

            <Button x:Name="YesButton"
                    Content="Yes"
                    Style="{StaticResource DialogButtonStyle}"
                    Command="{Binding YesCommand}"
                    IsDefault="True"
                    Visibility="{Binding Buttons, Converter={StaticResource ButtonVisibilityConverter}, ConverterParameter=Yes}"/>

            <Button x:Name="NoButton"
                    Content="No"
                    Style="{StaticResource DialogButtonStyle}"
                    Command="{Binding NoCommand}"
                    Visibility="{Binding Buttons, Converter={StaticResource ButtonVisibilityConverter}, ConverterParameter=No}"/>

            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Style="{StaticResource DialogButtonStyle}"
                    Command="{Binding CancelCommand}"
                    IsCancel="True"
                    Visibility="{Binding Buttons, Converter={StaticResource ButtonVisibilityConverter}, ConverterParameter=Cancel}"/>

            <Button x:Name="RetryButton"
                    Content="Retry"
                    Style="{StaticResource DialogButtonStyle}"
                    Command="{Binding RetryCommand}"
                    Visibility="{Binding Buttons, Converter={StaticResource ButtonVisibilityConverter}, ConverterParameter=Retry}"/>
        </StackPanel>
    </Grid>
</Window>