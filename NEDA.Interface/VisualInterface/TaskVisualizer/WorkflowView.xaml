<UserControl x:Class="NEDA.Interface.VisualInterface.TaskVisualizer.WorkflowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NEDA.Interface.VisualInterface.TaskVisualizer"
             xmlns:controls="clr-namespace:NEDA.UI.Controls;assembly=NEDA.UI"
             xmlns:converters="clr-namespace:NEDA.Common.Converters;assembly=NEDA.Core"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:cmd="http://www.galasoft.ch/mvvmlight"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280"
             d:DataContext="{d:DesignInstance local:WorkflowViewModel, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/NEDA.UI;component/Styles/MainStyle.xaml"/>
                <ResourceDictionary Source="/NEDA.UI;component/Themes/DarkTheme/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:WorkflowStatusToColorConverter x:Key="StatusToColor"/>
            <converters:TaskPriorityToBrushConverter x:Key="PriorityToBrush"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
            <converters:ZoomLevelToScaleConverter x:Key="ZoomConverter"/>

            <!-- Styles -->
            <Style x:Key="WorkflowNodeStyle" TargetType="ContentControl">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ContentControl">
                            <Grid>
                                <Border x:Name="NodeBorder" 
                                        CornerRadius="8" 
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Effect="{StaticResource DropShadowEffect}">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" 
                                                         ShadowDepth="2" 
                                                         Opacity="0.3"/>
                                    </Border.Effect>
                                </Border>
                                <ContentPresenter Margin="12"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="NodeBorder" Property="BorderBrush" Value="#FF4285F4"/>
                                    <Setter TargetName="NodeBorder" Property="BorderThickness" Value="2"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="NodeBorder" Property="BorderBrush" Value="#FF34A853"/>
                                    <Setter TargetName="NodeBorder" Property="BorderThickness" Value="3"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ConnectionLineStyle" TargetType="Polyline">
                <Setter Property="Stroke" Value="#7F7F7F"/>
                <Setter Property="StrokeThickness" Value="2"/>
                <Setter Property="StrokeDashArray" Value="5,2"/>
                <Setter Property="StrokeEndLineCap" Value="Round"/>
                <Setter Property="StrokeStartLineCap" Value="Round"/>
            </Style>

            <!-- Templates -->
            <DataTemplate x:Key="TaskNodeTemplate">
                <Grid Width="180" Height="100">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Task Header -->
                    <Border Grid.Row="0" Background="{Binding Priority, Converter={StaticResource PriorityToBrush}}"
                            CornerRadius="8,8,0,0" Height="28">
                        <Grid>
                            <TextBlock Text="{Binding Title}" 
                                       FontWeight="SemiBold" 
                                       Foreground="White"
                                       Margin="8,4"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"/>
                            <Ellipse Width="10" Height="10" 
                                     Fill="{Binding Status, Converter={StaticResource StatusToColor}}"
                                     HorizontalAlignment="Right"
                                     Margin="0,0,8,0"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Task Content -->
                    <Border Grid.Row="1" Background="#FFF5F5F5">
                        <TextBlock Text="{Binding Description}" 
                                   Margin="8"
                                   TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis"
                                   Foreground="#FF333333"/>
                    </Border>

                    <!-- Task Footer -->
                    <Border Grid.Row="2" Background="#FFE0E0E0" 
                            CornerRadius="0,0,8,8" Height="24">
                        <Grid>
                            <TextBlock Text="{Binding AssignedTo}" 
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="11"
                                       Foreground="#FF666666"/>
                            <TextBlock Text="{Binding Duration}" 
                                       HorizontalAlignment="Right"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"
                                       FontSize="11"
                                       Foreground="#FF666666"/>
                        </Grid>
                    </Border>
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="DecisionNodeTemplate">
                <Grid Width="120" Height="120">
                    <Polygon Points="60,0 120,60 60,120 0,60" 
                             Fill="#FF2196F3" 
                             Stroke="#1976D2" 
                             StrokeThickness="2">
                        <Polygon.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                        </Polygon.Effect>
                    </Polygon>
                    <TextBlock Text="{Binding Condition}" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               Foreground="White"
                               FontWeight="Bold"
                               Margin="12"
                               TextWrapping="Wrap"/>
                </Grid>
            </DataTemplate>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBackground}" 
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Height="48">
            <StackPanel Orientation="Horizontal" Margin="8,0">
                <controls:CustomButton Style="{StaticResource IconButtonStyle}"
                                       Content="&#xE700;" 
                                       FontFamily="Segoe MDL2 Assets"
                                       ToolTip="New Workflow"
                                       Command="{Binding CreateNewWorkflowCommand}"/>

                <controls:CustomButton Style="{StaticResource IconButtonStyle}"
                                       Content="&#xE71A;" 
                                       FontFamily="Segoe MDL2 Assets"
                                       ToolTip="Open Workflow"
                                       Command="{Binding OpenWorkflowCommand}"/>

                <controls:CustomButton Style="{StaticResource IconButtonStyle}"
                                       Content="&#xE74E;" 
                                       FontFamily="Segoe MDL2 Assets"
                                       ToolTip="Save Workflow"
                                       Command="{Binding SaveWorkflowCommand}"/>

                <Separator Width="20" Opacity="0"/>

                <controls:CustomButton Style="{StaticResource IconButtonStyle}"
                                       Content="&#xE710;" 
                                       FontFamily="Segoe MDL2 Assets"
                                       ToolTip="Add Task Node"
                                       Command="{Binding AddTaskNodeCommand}"/>

                <controls:CustomButton Style="{StaticResource IconButtonStyle}"
                                       Content="&#xE81C;" 
                                       FontFamily="Segoe MDL2 Assets"
                                       ToolTip="Add Decision Node"
                                       Command="{Binding AddDecisionNodeCommand}"/>

                <controls:CustomButton Style="{StaticResource IconButtonStyle}"
                                       Content="&#xE8A7;" 
                                       FontFamily="Segoe MDL2 Assets"
                                       ToolTip="Connect Nodes"
                                       Command="{Binding ConnectNodesCommand}"
                                       IsEnabled="{Binding IsConnectModeActive, Converter={StaticResource BoolToVisibility}}"/>

                <Separator Width="20" Opacity="0"/>

                <!-- Zoom Controls -->
                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                    <controls:CustomButton Style="{StaticResource IconButtonStyle}"
                                           Content="&#xE71E;" 
                                           FontFamily="Segoe MDL2 Assets"
                                           ToolTip="Zoom Out"
                                           Command="{Binding ZoomOutCommand}"/>

                    <TextBlock Text="{Binding ZoomLevel, StringFormat={}{0}%}" 
                               VerticalAlignment="Center" 
                               Margin="8,0"
                               Foreground="{StaticResource PrimaryTextColor}"
                               MinWidth="60"
                               TextAlignment="Center"/>

                    <controls:CustomButton Style="{StaticResource IconButtonStyle}"
                                           Content="&#xE71D;" 
                                           FontFamily="Segoe MDL2 Assets"
                                           ToolTip="Zoom In"
                                           Command="{Binding ZoomInCommand}"/>

                    <controls:CustomButton Style="{StaticResource IconButtonStyle}"
                                           Content="&#xE721;" 
                                           FontFamily="Segoe MDL2 Assets"
                                           ToolTip="Reset Zoom"
                                           Command="{Binding ResetZoomCommand}"
                                           Margin="12,0,0,0"/>
                </StackPanel>

                <!-- Search Box -->
                <Border Background="{StaticResource ControlBackground}" 
                        CornerRadius="4" 
                        Height="32" 
                        Width="200"
                        Margin="40,0,0,0">
                    <Grid>
                        <TextBox x:Name="SearchBox" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="8,4,32,4"
                                 VerticalAlignment="Center"
                                 Foreground="{StaticResource PrimaryTextColor}"
                                 PlaceholderText="Search nodes...">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="TextChanged">
                                    <cmd:EventToCommand Command="{Binding SearchCommand}"
                                                        PassEventArgsToCommand="True"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                        <TextBlock Text="&#xE721;" 
                                   FontFamily="Segoe MDL2 Assets"
                                   Foreground="{StaticResource SecondaryTextColor}"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   Visibility="{Binding HasSearchText, Converter={StaticResource BoolToVisibility}, ConverterParameter=inverse}"/>
                        <controls:CustomButton Style="{StaticResource IconButtonStyle}"
                                               Content="&#xE711;" 
                                               FontFamily="Segoe MDL2 Assets"
                                               ToolTip="Clear Search"
                                               Command="{Binding ClearSearchCommand}"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="0,0,4,0"
                                               Width="24" Height="24"
                                               Visibility="{Binding HasSearchText, Converter={StaticResource BoolToVisibility}}"/>
                    </Grid>
                </Border>

                <!-- View Mode Selector -->
                <ComboBox ItemsSource="{Binding ViewModes}"
                          SelectedItem="{Binding SelectedViewMode}"
                          Margin="20,0,0,0"
                          Width="120"
                          Style="{StaticResource ModernComboBoxStyle}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Icon}" 
                                           FontFamily="Segoe MDL2 Assets"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Workflow Canvas -->
        <Border Grid.Row="1" 
                Background="{StaticResource CanvasBackground}" 
                BorderThickness="0">
            <Grid>
                <!-- Grid Lines -->
                <Canvas x:Name="GridLinesCanvas" IsHitTestVisible="False">
                    <Canvas.Background>
                        <DrawingBrush Viewport="0,0,50,50" ViewportUnits="Absolute" TileMode="Tile">
                            <DrawingBrush.Drawing>
                                <GeometryDrawing>
                                    <GeometryDrawing.Pen>
                                        <Pen Brush="{StaticResource GridLineColor}" Thickness="0.5"/>
                                    </GeometryDrawing.Pen>
                                    <GeometryDrawing.Geometry>
                                        <GeometryGroup>
                                            <LineGeometry StartPoint="0,0" EndPoint="0,50"/>
                                            <LineGeometry StartPoint="0,0" EndPoint="50,0"/>
                                        </GeometryGroup>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Canvas.Background>
                </Canvas>

                <!-- Main ScrollViewer -->
                <ScrollViewer x:Name="MainScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              PanningMode="Both"
                              Background="Transparent">
                    <Grid>
                        <!-- Main Canvas Container -->
                        <Border x:Name="CanvasContainer"
                                Background="Transparent"
                                Width="{Binding CanvasWidth}"
                                Height="{Binding CanvasHeight}">

                            <!-- Zoom/Scale Transform -->
                            <Border.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding ZoomLevel, Converter={StaticResource ZoomConverter}}"
                                                ScaleY="{Binding ZoomLevel, Converter={StaticResource ZoomConverter}}"
                                                CenterX="0.5" CenterY="0.5"/>
                            </Border.LayoutTransform>

                            <!-- Connection Lines -->
                            <Canvas x:Name="ConnectionCanvas">
                                <ItemsControl ItemsSource="{Binding Connections}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Polyline Points="{Binding Points}"
                                                      Style="{StaticResource ConnectionLineStyle}"
                                                      Stroke="{Binding Status, Converter={StaticResource StatusToColor}}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Temporary Connection Line (during drag) -->
                                <Line x:Name="TempConnectionLine" 
                                      Visibility="Collapsed"
                                      Stroke="#FF4285F4"
                                      StrokeThickness="2"
                                      StrokeDashArray="3,2"/>
                            </Canvas>

                            <!-- Nodes Container -->
                            <ItemsControl x:Name="NodesContainer"
                                          ItemsSource="{Binding Nodes}"
                                          Background="Transparent">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ContentControl Style="{StaticResource WorkflowNodeStyle}"
                                                        Content="{Binding}"
                                                        ContentTemplate="{Binding NodeType, Converter={StaticResource NodeTemplateSelector}}"
                                                        Canvas.Left="{Binding X}"
                                                        Canvas.Top="{Binding Y}"
                                                        Width="{Binding Width}"
                                                        Height="{Binding Height}"
                                                        Background="{Binding Status, Converter={StaticResource StatusToColor}}"
                                                        BorderBrush="{StaticResource BorderColor}"
                                                        BorderThickness="1"
                                                        Tag="{Binding Id}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                                    <cmd:EventToCommand Command="{Binding DataContext.NodeMouseDownCommand, 
                                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                        CommandParameter="{Binding}"/>
                                                </i:EventTrigger>
                                                <i:EventTrigger EventName="MouseLeftButtonUp">
                                                    <cmd:EventToCommand Command="{Binding DataContext.NodeMouseUpCommand, 
                                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                        CommandParameter="{Binding}"/>
                                                </i:EventTrigger>
                                                <i:EventTrigger EventName="MouseMove">
                                                    <cmd:EventToCommand Command="{Binding DataContext.NodeMouseMoveCommand, 
                                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                        CommandParameter="{Binding}"/>
                                                </i:EventTrigger>
                                                <i:EventTrigger EventName="MouseDoubleClick">
                                                    <cmd:EventToCommand Command="{Binding DataContext.NodeDoubleClickCommand, 
                                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                        CommandParameter="{Binding}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ContentControl>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Selection Rectangle -->
                            <Rectangle x:Name="SelectionRect" 
                                       Stroke="#FF4285F4"
                                       StrokeThickness="1.5"
                                       StrokeDashArray="3,2"
                                       Fill="#334285F4"
                                       Visibility="Collapsed"
                                       Canvas.Left="0"
                                       Canvas.Top="0"/>
                        </Border>
                    </Grid>
                </ScrollViewer>

                <!-- Mini Map -->
                <Border x:Name="MiniMap" 
                        Width="200" 
                        Height="150" 
                        CornerRadius="4"
                        Background="{StaticResource ControlBackground}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,20,20"
                        Opacity="0.8">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.5"/>
                    </Border.Effect>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{StaticResource StatusBarBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0"
                Height="28">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StatusBar Grid.Column="0" Background="Transparent">
                    <StatusBarItem>
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="{StaticResource SecondaryTextColor}"
                                   VerticalAlignment="Center"/>
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem>
                        <TextBlock Text="Nodes:"
                                   Foreground="{StaticResource SecondaryTextColor}"
                                   Margin="8,0,0,0"/>
                        <TextBlock Text="{Binding NodeCount}"
                                   Foreground="{StaticResource PrimaryTextColor}"
                                   FontWeight="SemiBold"
                                   Margin="4,0,0,0"/>
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem>
                        <TextBlock Text="Connections:"
                                   Foreground="{StaticResource SecondaryTextColor}"
                                   Margin="8,0,0,0"/>
                        <TextBlock Text="{Binding ConnectionCount}"
                                   Foreground="{StaticResource PrimaryTextColor}"
                                   FontWeight="SemiBold"
                                   Margin="4,0,0,0"/>
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem>
                        <controls:ProgressIndicator x:Name="WorkflowProgress"
                                                   Value="{Binding Progress}"
                                                   Width="120"
                                                   Height="12"
                                                   Margin="8,0,0,0"
                                                   Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibility}}"/>
                    </StatusBarItem>
                </StatusBar>

                <StatusBar Grid.Column="1" Background="Transparent">
                    <StatusBarItem>
                        <TextBlock Text="Cursor:"
                                   Foreground="{StaticResource SecondaryTextColor}"/>
                        <TextBlock Text="{Binding CursorPosition}"
                                   Foreground="{StaticResource PrimaryTextColor}"
                                   FontWeight="SemiBold"
                                   Margin="4,0,8,0"/>
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem>
                        <TextBlock Text="{Binding CurrentTime}"
                                   Foreground="{StaticResource SecondaryTextColor}"
                                   Margin="8,0,8,0"/>
                    </StatusBarItem>
                </StatusBar>
            </Grid>
        </Border>

        <!-- Context Menu for Canvas -->
        <ContextMenu x:Key="CanvasContextMenu">
            <MenuItem Header="Add Task" 
                      Command="{Binding AddTaskNodeCommand}"
                      Icon="&#xE710;" FontFamily="Segoe MDL2 Assets"/>
            <MenuItem Header="Add Decision" 
                      Command="{Binding AddDecisionNodeCommand}"
                      Icon="&#xE81C;" FontFamily="Segoe MDL2 Assets"/>
            <Separator/>
            <MenuItem Header="Paste" 
                      Command="{Binding PasteCommand}"
                      Icon="&#xE77F;" FontFamily="Segoe MDL2 Assets"/>
            <Separator/>
            <MenuItem Header="Select All" 
                      Command="{Binding SelectAllCommand}"
                      Icon="&#xE8B3;" FontFamily="Segoe MDL2 Assets"/>
            <MenuItem Header="Clear Selection" 
                      Command="{Binding ClearSelectionCommand}"
                      Icon="&#xE8BB;" FontFamily="Segoe MDL2 Assets"/>
            <Separator/>
            <MenuItem Header="Zoom to Fit" 
                      Command="{Binding ZoomToFitCommand}"
                      Icon="&#xE721;" FontFamily="Segoe MDL2 Assets"/>
            <MenuItem Header="Show Grid" 
                      IsCheckable="True"
                      IsChecked="{Binding ShowGrid}"
                      Icon="&#xEC37;" FontFamily="Segoe MDL2 Assets"/>
        </ContextMenu>

        <!-- Context Menu for Node -->
        <ContextMenu x:Key="NodeContextMenu">
            <MenuItem Header="Edit Node" 
                      Command="{Binding EditNodeCommand}"
                      Icon="&#xE70F;" FontFamily="Segoe MDL2 Assets"/>
            <MenuItem Header="Delete Node" 
                      Command="{Binding DeleteNodeCommand}"
                      Icon="&#xE74D;" FontFamily="Segoe MDL2 Assets"/>
            <Separator/>
            <MenuItem Header="Duplicate" 
                      Command="{Binding DuplicateNodeCommand}"
                      Icon="&#xE8C8;" FontFamily="Segoe MDL2 Assets"/>
            <Separator/>
            <MenuItem Header="Start Connection" 
                      Command="{Binding StartConnectionCommand}"
                      Icon="&#xE8A7;" FontFamily="Segoe MDL2 Assets"/>
            <Separator/>
            <MenuItem Header="Properties" 
                      Command="{Binding ShowNodePropertiesCommand}"
                      Icon="&#xE946;" FontFamily="Segoe MDL2 Assets"/>
        </ContextMenu>
    </Grid>
</UserControl>