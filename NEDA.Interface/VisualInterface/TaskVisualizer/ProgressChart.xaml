<!-- NEDA.UI/Views/TaskVisualizer/ProgressChart.xaml -->
<UserControl x:Class="NEDA.UI.Views.TaskVisualizer.ProgressChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NEDA.UI.Views.TaskVisualizer"
             xmlns:charting="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:converters="clr-namespace:NEDA.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/NEDA.UI;component/Assets/Styles/ChartStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:PercentageConverter x:Key="PercentageConverter"/>
            <converters:DateTimeToChartValueConverter x:Key="DateTimeConverter"/>
            <converters:TaskStatusToColorConverter x:Key="StatusColorConverter"/>

            <Style x:Key="ChartHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>

            <Style x:Key="ChartLegendStyle" TargetType="lvc:DefaultLegend">
                <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Foreground" Value="{DynamicResource SecondaryTextColor}"/>
                <Setter Property="Margin" Value="5"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chart Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock x:Name="ChartTitle" 
                       Style="{StaticResource ChartHeaderStyle}"
                       Text="{Binding ChartTitle, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

            <ComboBox x:Name="ChartTypeSelector" 
                      Margin="20,0,0,0"
                      Width="150"
                      ItemsSource="{Binding ChartTypes}"
                      SelectedItem="{Binding SelectedChartType, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{Binding IconPath}" 
                                  Fill="{DynamicResource PrimaryColor}"
                                  Width="16" Height="16"
                                  Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding DisplayName}"
                                       Foreground="{DynamicResource PrimaryTextColor}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <ComboBox x:Name="TimeRangeSelector" 
                      Margin="10,0,0,0"
                      Width="120"
                      ItemsSource="{Binding TimeRanges}"
                      SelectedItem="{Binding SelectedTimeRange, Mode=TwoWay}"/>
        </StackPanel>

        <!-- Main Chart Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Dynamic Chart Display -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="10">

                <Grid>
                    <!-- Progress Bar Chart -->
                    <Grid x:Name="BarChartGrid" 
                          Visibility="{Binding IsBarChartVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <lvc:CartesianChart Series="{Binding BarSeries}" 
                                            LegendLocation="None"
                                            AnimationsSpeed="0:0:0.3">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="{Binding XAxisTitle}" 
                                          Labels="{Binding XAxisLabels}"
                                          Foreground="{DynamicResource SecondaryTextColor}">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="0.5" Stroke="{DynamicResource BorderColor}"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="{Binding YAxisTitle}" 
                                          Foreground="{DynamicResource SecondaryTextColor}">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="0.5" Stroke="{DynamicResource BorderColor}"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>

                    <!-- Line Chart -->
                    <Grid x:Name="LineChartGrid" 
                          Visibility="{Binding IsLineChartVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <lvc:CartesianChart Series="{Binding LineSeries}" 
                                            LegendLocation="None"
                                            AnimationsSpeed="0:0:0.3"
                                            Hoverable="True"
                                            DataTooltip="{x:Null}">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="{Binding XAxisTitle}" 
                                          Labels="{Binding XAxisLabels}"
                                          Foreground="{DynamicResource SecondaryTextColor}">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="0.5" Stroke="{DynamicResource BorderColor}"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="{Binding YAxisTitle}" 
                                          Foreground="{DynamicResource SecondaryTextColor}">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="0.5" Stroke="{DynamicResource BorderColor}"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>

                    <!-- Pie Chart -->
                    <Grid x:Name="PieChartGrid" 
                          Visibility="{Binding IsPieChartVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <lvc:PieChart Series="{Binding PieSeries}" 
                                      LegendLocation="Right"
                                      AnimationsSpeed="0:0:0.3"
                                      Hoverable="True"
                                      DataTooltip="{x:Null}">
                            <lvc:PieChart.ChartLegend>
                                <lvc:DefaultLegend Style="{StaticResource ChartLegendStyle}"/>
                            </lvc:PieChart.ChartLegend>
                        </lvc:PieChart>
                    </Grid>

                    <!-- No Data State -->
                    <Grid x:Name="NoDataGrid" 
                          Visibility="{Binding HasData, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                        <StackPanel>
                            <Path Data="M12,2C6.48,2,2,6.48,2,12s4.48,10,10,10s10-4.48,10-10S17.52,2,12,2z M12,20c-4.41,0-8-3.59-8-8s3.59-8,8-8s8,3.59,8,8S16.41,20,12,20z M12,6c-3.31,0-6,2.69-6,6s2.69,6,6,6s6-2.69,6-6S15.31,6,12,6z" 
                                  Fill="{DynamicResource DisabledColor}"
                                  Width="48" Height="48"
                                  Margin="0,0,0,10"
                                  HorizontalAlignment="Center"/>
                            <TextBlock Text="No Data Available" 
                                       Foreground="{DynamicResource DisabledColor}"
                                       HorizontalAlignment="Center"
                                       FontSize="14"/>
                            <TextBlock Text="Start tasks to see progress visualization" 
                                       Foreground="{DynamicResource SecondaryTextColor}"
                                       HorizontalAlignment="Center"
                                       FontSize="12"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Chart Legend -->
            <Border Grid.Column="1" 
                    Width="200"
                    Margin="10,0,0,0"
                    Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ChartLegendItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <Border Width="12" Height="12" 
                                            Background="{Binding Color}"
                                            CornerRadius="2"
                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Label}" 
                                               Foreground="{DynamicResource PrimaryTextColor}"
                                               FontSize="12"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Value, StringFormat=' ({0})'}" 
                                               Foreground="{DynamicResource SecondaryTextColor}"
                                               FontSize="12"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Chart Statistics -->
        <Border Grid.Row="2" 
                Margin="10,10,10,0"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Tasks -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Total Tasks: " 
                               Foreground="{DynamicResource SecondaryTextColor}"
                               FontSize="12"/>
                    <TextBlock Text="{Binding TotalTasks}" 
                               Foreground="{DynamicResource PrimaryTextColor}"
                               FontSize="12"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Completed Tasks -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Completed: " 
                               Foreground="{DynamicResource SecondaryTextColor}"
                               FontSize="12"/>
                    <TextBlock Text="{Binding CompletedTasks}" 
                               Foreground="{DynamicResource SuccessColor}"
                               FontSize="12"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <!-- In Progress Tasks -->
                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <TextBlock Text="In Progress: " 
                               Foreground="{DynamicResource SecondaryTextColor}"
                               FontSize="12"/>
                    <TextBlock Text="{Binding InProgressTasks}" 
                               Foreground="{DynamicResource WarningColor}"
                               FontSize="12"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Progress Bar -->
                <ProgressBar Grid.Column="1" 
                             Grid.ColumnSpan="5"
                             Height="8"
                             Margin="20,5,0,0"
                             Value="{Binding OverallProgress}"
                             Maximum="100"
                             Style="{StaticResource ModernProgressBar}">
                    <ProgressBar.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="{DynamicResource SuccessColor}" Offset="0"/>
                            <GradientStop Color="{DynamicResource WarningColor}" Offset="0.5"/>
                            <GradientStop Color="{DynamicResource ErrorColor}" Offset="1"/>
                        </LinearGradientBrush>
                    </ProgressBar.Background>
                </ProgressBar>

                <!-- Time Range Info -->
                <TextBlock Grid.Column="5"
                           HorizontalAlignment="Right"
                           Text="{Binding TimeRangeInfo}"
                           Foreground="{DynamicResource SecondaryTextColor}"
                           FontSize="11"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>