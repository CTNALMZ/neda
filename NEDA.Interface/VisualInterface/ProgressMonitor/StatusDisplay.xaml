<UserControl x:Class="NEDA.Interface.VisualInterface.MainDashboard.StatusDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NEDA.Interface.VisualInterface.MainDashboard"
             xmlns:converters="clr-namespace:NEDA.UI.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml"/>
                <ResourceDictionary Source="Styles/StatusDisplayStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
            <converters:PercentageToColorConverter x:Key="PercentageToColor"/>
            <converters:StatusToIconConverter x:Key="StatusToIcon"/>
            <converters:DateTimeToRelativeTimeConverter x:Key="DateTimeToRelative"/>
            <converters:BytesToHumanReadableConverter x:Key="BytesToHuman"/>
            <converters:NotificationCountToBadgeConverter x:Key="CountToBadge"/>
            <converters:HealthStatusToBrushConverter x:Key="HealthToBrush"/>

            <!-- Styles -->
            <Style x:Key="StatusCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="8" Opacity="0.1" ShadowDepth="2" Direction="270"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="MetricValueStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                <Setter Property="Margin" Value="0,4,0,0"/>
            </Style>

            <Style x:Key="StatusIndicatorStyle" TargetType="Border">
                <Setter Property="Width" Value="12"/>
                <Setter Property="Height" Value="12"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="8,0,0,0"/>
            </Style>

            <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
                <Setter Property="Height" Value="8"/>
                <Setter Property="Margin" Value="12,8,0,0"/>
                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignPrimaryBrush}"/>
                <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ProgressBar">
                            <Grid x:Name="TemplateRoot">
                                <Border x:Name="PART_Track" 
                                        CornerRadius="4"
                                        Background="{TemplateBinding Background}"/>
                                <Border x:Name="PART_Indicator" 
                                        CornerRadius="4"
                                        Background="{TemplateBinding Foreground}"
                                        HorizontalAlignment="Left"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Animations -->
            <Storyboard x:Key="PulseAnimation">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)">
                    <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0.5"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>

            <Storyboard x:Key="SlideInAnimation">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
                    <EasingDoubleKeyFrame KeyTime="0:0:0" Value="-20"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)">
                    <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <!-- Main Container -->
        <Border Style="{StaticResource StatusCardStyle}"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TranslateTransform/>
            </Border.RenderTransform>
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource SlideInAnimation}"/>
                </EventTrigger>
            </Border.Triggers>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.ColumnSpan="3" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Dashboard" 
                                             Width="24" 
                                             Height="24"
                                             Foreground="{DynamicResource MaterialDesignPrimaryBrush}"
                                             Margin="0,0,12,0"/>
                    <TextBlock Text="Sistem Durumu"
                               FontSize="18"
                               FontWeight="Medium"
                               Foreground="{DynamicResource MaterialDesignBody}"/>

                    <!-- Last Update Time -->
                    <TextBlock Text="{Binding LastUpdateTime, StringFormat='Son güncelleme: {0:HH:mm:ss}'}"
                               FontSize="11"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               Margin="16,0,0,0"
                               VerticalAlignment="Center"/>

                    <!-- Auto Refresh Indicator -->
                    <StackPanel Orientation="Horizontal" Margin="8,0,0,0" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Refresh" 
                                                 Width="12" 
                                                 Height="12"
                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock Text="Otomatik"
                                   FontSize="10"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="4,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Status Indicators Grid -->
                <ItemsControl Grid.Row="1" Grid.ColumnSpan="3"
                              ItemsSource="{Binding StatusItems}"
                              Margin="0,16,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource StatusCardStyle}"
                                    Width="180"
                                    Height="120"
                                    Margin="0,0,12,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Icon -->
                                    <materialDesign:PackIcon Kind="{Binding Icon}"
                                                             Width="24"
                                                             Height="24"
                                                             Foreground="{Binding StatusColor}"/>

                                    <!-- Status Text -->
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Title}"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource MaterialDesignBody}"
                                               Margin="8,0,0,0"/>

                                    <!-- Main Value -->
                                    <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                               Text="{Binding Value}"
                                               Style="{StaticResource MetricValueStyle}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>

                                    <!-- Sub Value/Unit -->
                                    <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                               Text="{Binding Unit}"
                                               FontSize="12"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="0,24,0,0"/>

                                    <!-- Progress Bar -->
                                    <ProgressBar Grid.Row="2" Grid.ColumnSpan="2"
                                                 Style="{StaticResource ProgressBarStyle}"
                                                 Value="{Binding Percentage}"
                                                 Foreground="{Binding StatusColor}"/>

                                    <!-- Trend Indicator -->
                                    <materialDesign:PackIcon Grid.Row="0" Grid.Column="1"
                                                             Kind="{Binding TrendIcon}"
                                                             Width="12"
                                                             Height="12"
                                                             Foreground="{Binding TrendColor}"
                                                             HorizontalAlignment="Right"
                                                             VerticalAlignment="Center"
                                                             Visibility="{Binding ShowTrend, Converter={StaticResource BoolToVisibility}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- System Health Summary -->
                <Border Grid.Row="2" Grid.Column="0"
                        Style="{StaticResource StatusCardStyle}"
                        Margin="0,16,8,0"
                        Width="200"
                        Height="80">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Health Icon -->
                        <materialDesign:PackIcon Kind="{Binding SystemHealth.Icon}"
                                                 Width="32"
                                                 Height="32"
                                                 Foreground="{Binding SystemHealth.Color}"/>

                        <!-- Health Details -->
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Sistem Saðlýðý"
                                       FontSize="12"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="{Binding SystemHealth.Status}"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding SystemHealth.Message}"
                                       FontSize="11"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       TextWrapping="Wrap"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Performance Metrics -->
                <Border Grid.Row="2" Grid.Column="1"
                        Style="{StaticResource StatusCardStyle}"
                        Margin="8,16,8,0"
                        Height="80">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Performans Metrikleri"
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="0,0,0,8"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <!-- CPU -->
                            <StackPanel Margin="0,0,16,0">
                                <TextBlock Text="CPU"
                                           FontSize="10"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CpuUsage, StringFormat='{}{0:F1}'}"
                                               Style="{StaticResource MetricValueStyle}"/>
                                    <TextBlock Text="%"
                                               FontSize="12"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               Margin="2,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <ProgressBar Style="{StaticResource ProgressBarStyle}"
                                             Width="60"
                                             Value="{Binding CpuUsage}"
                                             Foreground="{Binding CpuUsage, Converter={StaticResource PercentageToColor}}"/>
                            </StackPanel>

                            <!-- Memory -->
                            <StackPanel Margin="0,0,16,0">
                                <TextBlock Text="Bellek"
                                           FontSize="10"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding MemoryUsage, StringFormat='{}{0:F1}'}"
                                               Style="{StaticResource MetricValueStyle}"/>
                                    <TextBlock Text="%"
                                               FontSize="12"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               Margin="2,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <ProgressBar Style="{StaticResource ProgressBarStyle}"
                                             Width="60"
                                             Value="{Binding MemoryUsage}"
                                             Foreground="{Binding MemoryUsage, Converter={StaticResource PercentageToColor}}"/>
                            </StackPanel>

                            <!-- Disk -->
                            <StackPanel Margin="0,0,16,0">
                                <TextBlock Text="Disk"
                                           FontSize="10"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DiskUsage, StringFormat='{}{0:F1}'}"
                                               Style="{StaticResource MetricValueStyle}"/>
                                    <TextBlock Text="%"
                                               FontSize="12"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               Margin="2,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <ProgressBar Style="{StaticResource ProgressBarStyle}"
                                             Width="60"
                                             Value="{Binding DiskUsage}"
                                             Foreground="{Binding DiskUsage, Converter={StaticResource PercentageToColor}}"/>
                            </StackPanel>

                            <!-- Network -->
                            <StackPanel>
                                <TextBlock Text="Að"
                                           FontSize="10"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding NetworkSpeed, StringFormat='{}{0:F1}'}"
                                               Style="{StaticResource MetricValueStyle}"/>
                                    <TextBlock Text="Mbps"
                                               FontSize="10"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               Margin="2,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <Border Style="{StaticResource StatusIndicatorStyle}"
                                        Background="{Binding NetworkStatus, Converter={StaticResource HealthToBrush}}"
                                        ToolTip="{Binding NetworkStatus}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Notifications Panel -->
                <Border Grid.Row="2" Grid.Column="2"
                        Style="{StaticResource StatusCardStyle}"
                        Margin="8,16,0,0"
                        Width="180"
                        Height="80">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Notification Icon with Badge -->
                        <materialDesign:PackIcon Kind="Bell"
                                                 Width="32"
                                                 Height="32"
                                                 Foreground="{DynamicResource MaterialDesignPrimaryBrush}">
                            <materialDesign:PackIcon.Style>
                                <Style TargetType="materialDesign:PackIcon">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UnreadNotificationCount}" Value="0">
                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding HasCriticalNotifications}" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </materialDesign:PackIcon.Style>
                        </materialDesign:PackIcon>

                        <!-- Badge for notification count -->
                        <Border Grid.Column="0"
                                Width="20"
                                Height="20"
                                Background="{DynamicResource MaterialDesignErrorBrush}"
                                CornerRadius="10"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="-8,-8,0,0"
                                Visibility="{Binding UnreadNotificationCount, Converter={StaticResource CountToBadge}}">
                            <TextBlock Text="{Binding UnreadNotificationCount}"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Notification Details -->
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Bildirimler"
                                       FontSize="12"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="{Binding UnreadNotificationCount, StringFormat='{}Okunmamýþ: {0}'}"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding TotalNotificationCount, StringFormat='{}Toplam: {0}'}"
                                       FontSize="11"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- View Notifications Button -->
                        <Button Grid.ColumnSpan="2"
                                Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                Background="Transparent"
                                Foreground="{DynamicResource MaterialDesignPrimaryBrush}"
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="0,0,-8,-8"
                                Command="{Binding ViewNotificationsCommand}"
                                ToolTip="Bildirimleri görüntüle">
                            <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Connection Status -->
                <Border Grid.Row="3" Grid.ColumnSpan="3"
                        Style="{StaticResource StatusCardStyle}"
                        Margin="0,16,0,0"
                        Height="60">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Connection Icon -->
                        <materialDesign:PackIcon Kind="{Binding ConnectionStatus.Icon}"
                                                 Width="24"
                                                 Height="24"
                                                 Foreground="{Binding ConnectionStatus.Color}"
                                                 VerticalAlignment="Center"/>

                        <!-- Connection Details -->
                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ConnectionStatus.Message}"
                                       FontSize="14"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ConnectionStatus.Details}"
                                       FontSize="11"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Connection Actions -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Content="Yenile"
                                    Command="{Binding RefreshCommand}"
                                    Margin="0,0,8,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRefreshing}" Value="True">
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <materialDesign:PackIcon Kind="Refresh" 
                                                                                 Width="16" 
                                                                                 Height="16">
                                                            <materialDesign:PackIcon.RenderTransform>
                                                                <RotateTransform CenterX="8" CenterY="8"/>
                                                            </materialDesign:PackIcon.RenderTransform>
                                                        </materialDesign:PackIcon>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="IsEnabled" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Content="Ayarlar"
                                    Command="{Binding SettingsCommand}">
                                <materialDesign:PackIcon Kind="Cog" Width="16" Height="16" Margin="0,0,4,0"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True"
                             Width="40"
                             Height="40"
                             Foreground="{DynamicResource MaterialDesignPrimaryBrush}"/>
                <TextBlock Text="Yükleniyor..."
                           Foreground="White"
                           FontSize="14"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Error Overlay -->
        <Border Background="#80F44336" 
                CornerRadius="8"
                Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}"
                Padding="16">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="AlertCircle"
                                         Width="32"
                                         Height="32"
                                         Foreground="White"/>
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="White"
                           FontSize="14"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,8,0,0"
                           MaxWidth="300"/>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Content="Tekrar Dene"
                        Foreground="White"
                        Command="{Binding RetryCommand}"
                        Margin="0,16,0,0">
                    <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" Margin="0,0,4,0"/>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>